
#include<stdio.h>
void main()
{
    // factorial of a number;
    
    int N;
    printf("Enter a value to find factorial : ");
    scanf("%d",&N);
    
    int fact = 1;
    if (N > 1)
    {
        for (int i=1;i<=N;i++)
        {
            fact = fact * i;
        }
        printf("Factorial of %d is %d",N, fact);
    }
    else if (N == 1 || N == 0)
        printf("Factorial of %d is : 1",N);
    else
        printf("Enter valid number!!");
}
